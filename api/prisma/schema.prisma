generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  username String  @unique
  password String

  @@map("users")
}

model Subject {
  id   String @id @default(uuid())
  name String

  @@map("subjects")
}
