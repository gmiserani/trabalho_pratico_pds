generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String?
  username String   @unique
  email    String   @unique
  course   String
  semester Int
  password String
  review   Review[]

  @@map("users")
}

model Subject {
  id              String   @id @default(uuid())
  teacher_id      String
  teacher         Teacher  @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  name            String
  syllabus        String
  mode            String
  date            String
  time            String
  semester        Int
  workload        Int
  presence_rating String   @default("0") // 0-1
  teacher_rating  String   @default("0") // 0-4
  project_rating  String   @default("0") // 0-3
  test_rating     String   @default("0") // 0-3
  effort_rating   String   @default("0") // 0-3
  overall_rating  Int      @default(0)
  reviews         Review[]

  @@map("subjects")
}

model Teacher {
  id      String    @id @default(uuid())
  name    String
  subject Subject[]
  picture String?

  @@map("teachers")
}

model Review {
  id              String  @id @default(uuid())
  subject_id      String
  subject         Subject @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  presence_rating String
  teacher_rating  String
  project_rating  String
  test_rating     String
  effort_rating   String
  overall_rating  Int
  comment         String?

  @@map("reviews")
}
